# BetterBudget Environment Variables
# Copy this file to .env.local and fill in your values

# Currency display (EUR, USD, GBP, etc.)
NEXT_PUBLIC_CURRENCY=EUR

# PostgreSQL database URL (from Supabase or other provider)
DATABASE_URL=postgresql://user:password@host:port/database

# Legacy auth (6-digit passcode)
PASSCODE=123456

# JWT secret for legacy auth (generate with: openssl rand -base64 32)
JWT_SECRET=your-secure-jwt-secret

# Supabase Auth
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-supabase-anon-key
